{
	"$schema": "https://turbo.build/schema.json",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["build/**", ".next/**"],
			"env": [
				"NEXT_PUBLIC_SITE_URL",
				"NEXT_PUBLIC_WORDPRESS_URL",
				"WPGRAPHQL_URL",
				"FAUSTWP_SECRET_KEY",
				"FAUST_NO_INTERACTIVE",
				"GITHUB_TOKEN"
			]
		},
		"start": {
			"cache": false,
			"persistent": true
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"test": {
			"dependsOn": ["build"]
		},
		"test:e2e": {
			"dependsOn": ["build"]
		},
		"test:unit": {},
		"lint": {},
		"lint:php": {},
		"lint:js": {},
		"zip": {
			"dependsOn": ["build"],
			"outputs": ["../../plugin-build/**"],
			"cache": false
		}
	}
}
