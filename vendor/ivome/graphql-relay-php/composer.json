{
    "name":              "ivome/graphql-relay-php",
    "description":       "A PHP port of GraphQL Relay reference implementation",
    "type":              "library",
    "license":           "BSD",
    "homepage":          "https://github.com/ivome/graphql-relay-php",
    "keywords":          [
        "graphql",
        "relay",
        "API"
    ],
    "require": {
        "php": ">=5.4,<8.0-DEV",
        "webonyx/graphql-php": ">=0.7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.8",
